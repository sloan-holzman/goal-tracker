<!DOCTYPE html>
<html>
  <head>
    <title>Goal Tracker</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <%= csrf_meta_tags %>
    <%= javascript_include_tag "https://www.gstatic.com/charts/loader.js" %>
    <%= stylesheet_link_tag     'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('Logo.png'), :rel => 'icon', :type =>  'image/png' %>
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Nunito+Sans' %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>
  <body>
    <nav>
      <div class="nav-container">
        <div class="logo">
          <%= link_to root_path do %>
            <%= image_tag 'Logo.png' %>
          <% end %>
        </div>
        <div class="nav-links">
          <% if current_user %>
            <a class="nav-link" href="/users/<%= current_user.id %>/metrics">PAST PERFORMANCE</a>
          <% else %>
          <a class="nav-link" href="/">PAST PERFORMANCE</a>
          <% end %>
            <a class="nav-link" href="/performances/all/edit">ENTER DAILY PERFORMANCE</a>
          <% if !current_user %>
            <a class="nav-link" href="/groups/all">ACCOUNTABILITY GROUPS</a>
          <% else %>
            <a class="nav-link" href="/users/<%= current_user.id %>/groups">ACCOUNTABILITY GROUPS</a>
          <% end %>
          <div class="dropdown">
          <% if !current_user %>
          <button class="dropbtn" href="/users/sign_up">SIGN UP</a>
          <!-- <%= button_to "Register", new_user_registration_path%> -->
          <% else %>
          <button onclick="myFunction()" class="dropbtn">Hi, <%= current_user.first_name %></button>
          <% end %>
            <div id="myDropdown" class="dropdown-content">
              <a href="/profiles/show">PROFILE</a>
              <% if !current_user %>
                <%= link_to "SIGN UP", new_user_registration_path %>
                <%= link_to "SIGN IN", new_user_session_path %>
              <% else %>
                <%= link_to "LOG OUT", destroy_user_session_path, :method => :delete %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </nav>
    <main>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </main>
  </body>
</html>
