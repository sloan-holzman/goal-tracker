<!DOCTYPE html>
<html>
  <head>
    <title>Goal Tracker</title>
    <%= csrf_meta_tags %>
    <%= javascript_include_tag "https://www.gstatic.com/charts/loader.js" %>
    <%= stylesheet_link_tag     'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('Logo.png'), :rel => 'icon', :type =>  'image/png' %>
  </head>
  <body>
    <nav>
      <div class="container">
        <div class="logo">
          <%= link_to root_path do %>
            <%= image_tag 'Logo.png' %>
          <% end %>
        </div>
        <div class="links">
          <a class="nav-link" href="/metrics/past">PAST PERFORMANCE</a>
          <a class="nav-link" href="/performances/all/edit">ENTER DAILY PERFORMANCE</a>
          <% if !current_user %>
            <a class="nav-link" href="/groups/all">ACCOUNTABILITY GROUPS</a>
          <% else %>
            <a class="nav-link" href="/users/<%= current_user.id %>/groups">ACCOUNTABILITY GROUPS</a>
          <% end %>
          <div class="dropdown">
          <button onclick="myFunction()" class="dropbtn">blah blah</button>
            <div id="myDropdown" class="dropdown-content">
              <a href="/profiles/show">PROFILE</a>
              <% if !current_user %>
                <%= link_to "SIGN UP", new_user_registration_path %>
                <%= link_to "SIGN IN", new_user_session_path %>
              <% else %>
                <%= link_to "LOG OUT", destroy_user_session_path, :method => :delete %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </nav>
    <main>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </main>
  </body>
</html>
