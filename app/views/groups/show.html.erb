<h2><%= @group.name %> Page</h2>
<h3>Members:</h3>
<% for user in @group.users %>
  <% if user.email != current_user.email %>
    <h4><%= user.email %></h4>
  <% end %>
<% end %>
<h2>Week of <%= Date.today.beginning_of_week(:sunday) %></h2>
<% i=0 %>
<% for user in @group.users %>
  <h4><%= user.email %></h4>
  <%= column_chart @group_week_data[i]  %>
  <% i+=1 %>
<% end %>
<h3><%= link_to "Invite new members", new_user_group_invitation_path(current_user, @group) %></h3>
<h3><%= link_to "Leave group", leave_group_path(current_user, @group), method: :delete %></h3>
<% if @membership.admin %>
  <h3><%= link_to "Delete group", "/users/#{current_user.id}/groups/#{@group.id}", method: :delete %></h3>
<% end %>
