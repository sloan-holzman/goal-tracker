<h2>@metric.name</h2>

<%= form_for [current_user,@metric] do |f|  %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :unit %>
  <%= f.text_field :unit %>

  <%= f.label :target %>
  <%= f.text_field :target %>

  <%= f.label "Metric type" %>
  <%=  f.select :good, [['Good metric', true], ['Bad metric', false]]%>

  <%= f.label "Per" %>
  <%=  f.select :duration, [['Week','Week']]%>

  <%= f.submit "Update" %>

<% end %>
