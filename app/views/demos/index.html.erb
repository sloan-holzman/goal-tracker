<!-- code taken from https://www.w3schools.com/bootstrap/tryit.asp?filename=trybs_carousel&stacked=h -->
<div class="carousel">
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
        <img src="https://hoopshabit.com/wp-content/uploads/getty-images/2017/09/610525858-2016-2017-new-york-knicks-media-day.jpg.jpg" alt="Los Angeles" style="width:100%;">Picture 1
        <div class="carousel-caption">
          <h3>Picture 1</h3>
        </div>
      </div>

      <div class="item">
        <img src="https://imagesvc.timeincapp.com/v3/fan/image?url=https://dailyknicks.com/wp-content/uploads/getty-images/2017/11/876859958-los-angeles-clippers-v-new-york-knicks.jpg.jpg&" alt="Chicago" style="width:100%;">
        <div class="carousel-caption">
          <h3>Picture 2</h3>
        </div>
      </div>

      <div class="item">
        <img src="https://thenypost.files.wordpress.com/2017/11/knicks9.jpg?quality=90&strip=all&w=1200" alt="New york" style="width:100%;">
        <div class="carousel-caption">
          <h3>Picture 3</h3>
        </div>
      </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
