<h2>New Competition</h2>

<%= form_for [current_user,@group, @competition] do |f|  %>
  <%= f.label "Metric" %>
  <%= f.text_field :metric_name %>

  <%= f.label "Unit" %>
  <%= f.text_field :metric_unit %>

  <%= f.label "Start Date" %>
  <%= f.date_field :start_date %>

  <%= f.label "End Date" %>
  <%= f.date_field :end_date %>

  <%= f.submit "Create" %>

<% end %>
